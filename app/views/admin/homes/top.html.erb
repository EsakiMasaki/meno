<div class="container my-5 bg-white p-5 rounded-lg">
  <div class="row mb-5">
    <div class="col-7">
      <h1>ユーザー一覧</h1>
    </div>

    <div class="col-5">
      <%= render "admin/searches/search" %>
    </div>
  </div>

  <table class="table border">
    <tr>
      <th class="bg-dark text-white">ユーザー名</th>
      <th class="bg-dark text-white">会員ステータス</th>
    </tr>
    <% @customers.each do |customer| %>
      <tr>
        <td>
          <%= link_to admin_customer_path(customer) , class: "text-dark" do %>
            <%= image_tag customer.get_profile_image(25,25), class: "rounded-circle mb-1" %>
            <%= customer.name %>
          <% end %>
        </td>
        <td>
          <!--顧客が退会しているかどうかで条件分岐-->
          <% if customer.is_deleted == false %>
            <span class="text-success"><b>有効</b></span>
          <% else %>
            <span class="text-danger"><b>退会</b></span>
          <% end %>
        </td>
      </tr>
    <% end %>
  </table>
  <%= paginate @customers %>
</div>
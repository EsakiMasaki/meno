<div class="container my-5 bg-white p-5 rounded-lg">
  <div class="row mb-5">
    <div class="col-md-7 col-sm-12">
      <h1 class="h1-font-size">ユーザー一覧</h1>
    </div>

    <div class="col-md-5 col-sm-12 text-md-right">
      <%= render "admin/searches/search" %>
    </div>
  </div>

  <table class="table border">
    <tr class="thead">
      <th class="bg-dark text-white" style="width: 0px;"></th>
      <th class="bg-dark text-white">ユーザー名</th>
      <th class="bg-dark text-white">会員ステータス</th>
      <th class="bg-dark text-white" style="width: 0px;"></th>
    </tr>
    <% @customers.each do |customer| %>
      <tr>
        <td></td>
        <td class="stick-out" data-label="ユーザー名">
          <%= link_to admin_customer_path(customer) , class: "text-dark" do %>
            <%= image_tag customer.get_profile_image(25,25), class: "rounded-circle mb-1" %>
            <%= customer.name %>
          <% end %>
        </td>
        <td class="stick-out" data-label="会員ステータス">
          <!--顧客が退会しているかどうかで条件分岐-->
          <% if customer.is_deleted == false %>
            <span class="text-success"><b>有効</b></span>
          <% else %>
            <span class="text-danger"><b>退会</b></span>
          <% end %>
        </td>
        <td class="m-0 p-0" style="width: 0px;"></td>
      </tr>
    <% end %>
  </table>
  <%= paginate @customers %>
</div>
<div class="nested-fields">

  <%= f.text_field :procedure, placeholder: "手順をここに記入" ,class: "form-control" %>
  <div class="image my-3">
    <%= f.file_field :procedure_image, accept: "image/*" %>
  </div>
  <%= f.text_area :explanation, rows: 4, placeholder: "手順の詳細説明を記入" ,class: "form-control" %>
  <div class="mt-3 text-center">
    <%= link_to_remove_association "削除" ,f ,class: "btn btn-sm btn-danger" %>
  </div>
</div>
<div class="container bg-white rounded-lg ml-5">
  <div class="row mt-5">
    <div class="col-12 my-3">
      <span>作成日: <%= @note.created_at.strftime("%Y/%m/%d") %></span>
      <span class="ml-3">最終更新日: <%= @note.updated_at.strftime("%Y/%m/%d") %></span>
      <span class="favorite-<%= @note.id %> mx-5">
        <%= render "public/favorites/like", note: @note %>
      </span>
      <% if current_customer == @note.customer %>
        <span class="ml-5">
          公開ステータス:
          <% if @note.publish_status == "publish" %>
            <%= Note.publish_statuses_i18n[:publish] %>
          <% else %>
            <%= Note.publish_statuses_i18n[:nonpublic] %>
          <% end %>
        </span>
      <% end %>
    </div>
  </div>

  <div class="row">
    <div class="col-12">
      <% if @note.category_id != nil %>
        <p><%= @note.category.name %></p>
      <% end %>
      <h1><%= @note.title %></h1>
      <h3>できるようになること</h3>
      <p><%= safe_join(@note.can.split("\n"),tag(:br)) %></p>
      <% if @note.necessities != "" %>
        <h3>必要なもの</h3>
        <p><%= safe_join(@note.necessities.split("\n"),tag(:br)) %></p>
      <% end %>
      <h3>手順</h3>
      <ol>
        <% @note.note_procedures.each do |procedure| %>
          <li><%= procedure.procedure %></li>
        <% end %>
      </ol>
      <h3>手順説明</h3>
      <% num = 0 %>
      <% @note.note_procedures.each do |procedure| %>
        <% num += 1 %>
        <h4><%= "#{num}. #{procedure.procedure}" %></h4>
        <% if procedure.procedure_image.attached? %>
          <p class="text-center"><%= image_tag procedure.get_procedure_image(700,500) %></p>
        <% end %>
        <p class="mb-3"><%= safe_join(procedure.explanation.split("\n"),tag(:br)) %></p>
      <% end %>

      <h3>まとめ</h3>
      <p><%= safe_join(@note.conclude.split("\n"),tag(:br)) %></p>
    </div>
  </div>

  <div class="row my-5">
    <% if current_customer == @note.customer %>
      <div class="col-12 text-center mb-5">
        <%= link_to "編集" , edit_note_path(@note), class: "btn btn-sm btn-success" %>
        <%= link_to "削除" , note_path(@note), method: :delete , "data-confirm" => "本当に削除しますか？" , class: "btn btn-sm btn-danger" %>
      </div>
    <% end %>
  </div>
</div>

<div class="container bg-white rounded-lg">
  <div class="row mb-5">
    <div class="col-12 text-center mt-5">
      <%= render "public/note_comments/form", note: @note, comment: @comment %>
    </div>
  </div>
  <div class="row mb-5">
    <div class="comments-index col-12 text-center">
      <%= render "public/note_comments/index", note: @note %>
    </div>
  </div>
</div>
<div class="container my-5 bg-white p-5 rounded-lg">
  <div class="row mb-5">
    <div class="col-md-7 col-sm-12">
      <h1>検索ワード: <%= @word %></h1>
    </div>

    <div class="col-md-5 col-sm-12 text-md-right">
      <%= render "public/searches/search" %>
    </div>
  </div>

  <!--ユーザーが一人でもいれば-->
  <% if @customers.count != 0 %>
    <table class="table border">
      <tr class="thead">
        <th class="bg-dark text-white"></th>
        <th class="bg-dark text-white">ユーザー名</th>
        <th class="bg-dark text-white">フォロー数</th>
        <th class="bg-dark text-white">フォロワー数</th>
        <th class="bg-dark text-white"></th>
      </tr>
      <% @customers.each do |customer| %>
        <tr>
          <td></td>
          <td data-label="ユーザー名">
            <%= link_to customer_path(customer) , class: "text-dark" do %>
              <%= image_tag customer.get_profile_image(25,25), class: "rounded-circle" %>
              <%= customer.name %>
            <% end %>
          </td>
          <td data-label="フォロー数">
            <%= link_to customer_followings_path(customer),class: "text-dark" do %>
              フォロー数: <%= customer.followings.count %>
            <% end %>
          </td>
          <td data-label="フォロワー数">
            <%= link_to customer_followers_path(customer),class: "text-dark" do %>
              フォロワー数:<%= customer.followers.count %>
            <% end %>
          </td>
          <td><%= link_to "詳細", customer_path(customer), class: "btn btn-primary" %></td>
        </tr>
      <% end %>
    </table>
  <% else %>
    <p>見つかりませんでした</p>
  <% end %>
  <%= paginate @customers %>
</div>